<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="search_index_auto">
		<field name="search_index_auto]["
			type="text"
			label="Search"
			labelclass="control-label"
		/>
		<field name="search_separator]["
			type="list"
			label="Search"
			labelclass="control-label"
		>
			<option value="and">AND</option>
			<option value="or">OR</option>
		</field>
		<field name="search_index_auto_3"
			type="text"
			label="Search"
			labelclass="control-label"
		/>
	</fieldset>
	<fieldset>
		<field name="search_index_manual"
			type="textarea"
			label="Search"
			labelclass="control-label"
			filter="raw"
			class="span6"
			rows="10"
		/>
	</fieldset>
	<fieldset name="control">
		<field
			   name="id"
			   type="text"
			   readonly="true"
			   class="readonly"
			   labelclass="control-label"
			   />
		<field name="name"
			type="text"
			label="Task Name"
			size="50"
			required="true"
			labelclass="control-label"
		/>
		<field name="published"
			type="radio"
			label="Published"
			default="1"
			labelclass="control-label"
			class="btn-group"
		>
			<option value="1">JYes</option>
			<option value="0">JNo</option>
		</field>
		<field name="engine"
			type="radio"
			label="Search Engine"
			default="google"
			labelclass="control-label"
			class="btn-group"
		>
			<option value="google">Google</option>
			<!--<option value="yahoo" disabled="true">Yahoo</option>
			<option value="bing" disabled="true">Bing</option>
			<option value="amazon" disabled="true">Amazon</option>-->
		</field>
		
		<field name="database"
			type="radio"
			label="Target Database"
			default="google"
			labelclass="control-label"
			class="btn-group"
		>
			<option value="google">Google</option>
			<option value="wiki">Wiki</option>
			<option value="ndltd">博碩士論文資料庫</option>
			<option value="udn">UDN</option>
			<option value="readopac">期刊資料庫</option>
			<option value="webometrics">Webometrics</option>
		</field>
	</fieldset>
	<fieldset name="term">
		<!--
		<field name="professors_name"
			type="textarea"
			label="Professor Name"
			cols="40"
			rows="5"
		/>
		-->
		<!--
		<field name="course_terms"
			type="textarea"
			label="Course Terms"
			cols="40"
			rows="5"
			default="課程名稱, Course Name"
		/>
		
		<field name="reference_terms"
			type="textarea"
			label="Reference Terms"
			cols="40"
			rows="5"
			default="參考資料, Reference"
		/>
		-->
		
	</fieldset>
</form>